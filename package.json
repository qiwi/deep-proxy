{
  "name": "@qiwi/deep-proxy",
  "version": "1.8.4",
  "private": false,
  "description": "Deep proxy implementation for TypeScript",
  "type": "module",
  "source": "src/main/ts/index.ts",
  "main": "target/bundle/deep-proxy.cjs",
  "module": "target/bundle/deep-proxy.mjs",
  "unpkg": "target/bundle/deep-proxy.umd.js",
  "types": "typings/index.d.ts",
  "typescript": {
    "definition": "typings/index.d.ts"
  },
  "scripts": {
    "lint": "eslint 'src/**/*.+(js|ts)'",
    "lint:fix": "yarn lint --fix",
    "test": "yarn lint && yarn test:unit",
    "test:unit": "NODE_OPTIONS=--experimental-vm-modules jest --config=jest.config.json --runInBand",
    "clean": "rimraf target typings flow-typed buildcache",
    "build": "yarn clean && yarn build:es5 && yarn build:es6 && yarn build:ts && yarn build:libdef && yarn docs && yarn uglify && yarn build:bundle",
    "build:es5": "mkdir -p target/es5 && tsc -p tsconfig.es5.json && yarn tsc-esm-fix --target=target/es5 --ext='.cjs'",
    "build:es6": "mkdir -p target/es6 && tsc -p tsconfig.es6.json && yarn tsc-esm-fix --target=target/es6 --ext='.js'",
    "build:ts": "cp -r src/main/ts/ target/ts/",
    "build:bundle": "microbundle --tsconfig tsconfig.es5.json build src/main/ts/index.ts -o target/bundle",
    "build:libdef": "libdefkit --tsconfig=tsconfig.es5.json --tsconfig=tsconfig.es6.json",
    "test:report": "yarn test && yarn push:report",
    "push:report": "yarn coveralls:push",
    "coveralls:push": "cat ./coverage/lcov.info | npm_config_yes=true npx coveralls || exit 0",
    "docs": "typedoc",
    "uglify": "for f in $(find target -name '*.js'); do short=${f%.js}; terser -c -m -o $short.js -- $f; done",
    "postupdate": "yarn && npm_config_yes=true npx yarn-audit-fix --audit-level=moderate && yarn build && yarn test",
    "format": "prettier --write \"src/**/*.ts\""
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/qiwi/deep-proxy.git"
  },
  "keywords": [
    "proxy",
    "deep",
    "nested",
    "chained",
    "deep-proxy",
    "nested-proxy"
  ],
  "files": [
    "README.md",
    "CHANGELOG.md",
    "target",
    "typings",
    "flow-typed"
  ],
  "author": "Anton Golub <a.golub@qiwi.com>",
  "license": "MIT",
  "devDependencies": {
    "@qiwi/libdefkit": "^4.0.6",
    "@qiwi/substrate": "^1.20.12",
    "@swissquote/crafty-preset-jest": "^1.19.1",
    "@types/jest": "^27.4.1",
    "@types/node": "^17.0.27",
    "eslint": "^8.14.0",
    "eslint-config-prettier": "^8.5.0",
    "eslint-config-qiwi": "^1.16.1",
    "jest": "^28.0.0",
    "microbundle": "^0.15.0",
    "prettier": "^2.6.2",
    "rimraf": "^3.0.2",
    "terser": "^5.12.1",
    "ts-jest": "^28.0.0-next.0",
    "tsc-esm-fix": "^2.13.0",
    "typedoc": "^0.22.15",
    "typescript": "4.6.4"
  },
  "dependencies": {
    "tslib": "^2.4.0"
  }
}
